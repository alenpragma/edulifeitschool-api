generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

enum UserRole {
  ADMIN
  USER
}

model User {
  id           Int      @id @default(autoincrement())
  name         String
  email        String   @unique
  passwordHash String
  role         UserRole @default(USER)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model SiteSetting {
  id        Int      @id @default(autoincrement())
  key       String   @unique
  value     Json
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Photo {
  id        Int      @id @default(autoincrement())
  url       String
  position  Int
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Teacher {
  id             Int      @id @default(autoincrement())
  name           String
  subject        String
  qualification  String
  profilePicture String?
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
}

model Event {
  id          String   @id @default(cuid())
  title       String
  description String?  @db.Text
  time        String
  location    String
  icon        String?
  date        DateTime
  entryFee    Int      @default(0)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model ContactForm {
  id        Int      @id @default(autoincrement())
  name      String
  phone     String
  email     String?
  subject   String
  message   String
  note      String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
